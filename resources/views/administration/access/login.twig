<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>{{ SITE_NAME }}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Font Awesome -->
  <link href=" {{ PUBLIC_PATH }}/css/all.min.css" rel="stylesheet">
  <!-- Bootstrpa 4 -->
  <link rel="stylesheet" href="{{ PUBLIC_PATH }}/css/bootstrap.min.css">
  <!-- AdminLTE -->
  <link rel="stylesheet" href="{{ PUBLIC_PATH }}/css/adminlte.min.css">
</head>
<body class="hold-transition login-page">
<div class="login-box">
  <div class="login-logo">
    <a class="no-underline f-color-co" href="{{ PUBLIC_PATH }}"><b>Pagina</b></a>
  </div>
  <!-- /.login-logo -->
  <div class="card">
    <div class="card-body login-card-body text-xs">
      <p class="login-box-msg f-color-co h5">Autenificación</p>
      <div class="text-left {% if errors is defined %} {{ 'alert alert-danger' }} {% endif %}" role="alert">
        {% if errors ?? false %}
          <ul class="mb-0">
            {% for error in errors %}
              <li>{{ error }}</li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>
      <form class="f-form" action="{{ PUBLIC_PATH }}/login" method="POST">
        <div class="input-group mb-3">
          <input type="text" class="form-control text-sm" placeholder="Usuario" name="user">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          <input type="password" class="form-control text-sm" placeholder="Password" name="password">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>
        <div class="row text-xs d-flex align-items-center">
          <div class="col-5 text-center">
            <button type="submit" class="btn btn-default text-xs">Entrar</button>
          </div>
          <!-- /.col -->
          <div class="col-7 text-center">
            <a class="f-color-co" href="#">Olvidaste tu contraseña?</a>
          </div>
          <!-- /.col -->
        </div>
      </form>
      <div class="f-separator mt-4 pt-1 text-xs f-color-co">
        <p class="change_link text-center">Nuevo aquí?
          <a href="#signin" class="to_register f-color-co"> Crear cuenta</a>
        </p>
      </div>
    </div>
    <!-- /.login-card-body -->
  </div>
</div>
<!-- /.login-box -->

<!-- jQuery -->
<script src="{{ PUBLIC_PATH }}/js/jquery.min.js"></script>
<!-- Bootstrap -->
<script src="{{ PUBLIC_PATH }}/js/bootstrap.min.js"></script>
<!-- AdminLTE -->
<script src="{{ PUBLIC_PATH }}/js/adminlte.min.js"></script>
<!-- App -->
<script src="{{ PUBLIC_PATH }}/js/private.js"></script>
</body>
</html>
